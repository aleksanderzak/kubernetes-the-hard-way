apiVersion: v1
clusters:
- cluster:
    certificate-authority-data: ${base64encode(ca_pem)}
    server: HTTPS://${public_ip_address}:6443
  name: ${cluster_name}
contexts:
- context:
    cluster: ${cluster_name}
    user: ${user}
  name: default
current-context: ""
kind: Config
preferences: {}
users:
- name: ${user}
  user:
    client-certificate-data: ${base64encode(client_cert)}
    client-key-data: ${base64encode(client_key)}
